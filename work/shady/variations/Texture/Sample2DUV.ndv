<Shady>
	<Variation desc="Samples an RGBA 2D texture with a custom UV set." simulationCommand="sample2duv" simulationValue="Source">
		<Output type="vec4" name="Sample"/>
		<Input type="vec2" name="UV"/>
		<Hidden type="sampler2D" name="Source"/>
		<Source type="GLSL">
			<Code output="Sample">
				[output] = texture(Source, UV);
			</Code>
		</Source>
	</Variation>
</Shady>
