<Shady>
	<Variation desc="Samples an RGBA Cube texture using a three component UV coordinate." simulationCommand="sample2duv" simulationValue="Source">
		<Output type="vec4" name="Sample"/>
		<Input type="vec3" name="UV"/>
		<Hidden type="samplerCube" name="Source"/>
		<Source type="GLSL">
			<Code output="Sample">
				[output] = texture(Source, UV);
			</Code>
		</Source>
	</Variation>
</Shady>
