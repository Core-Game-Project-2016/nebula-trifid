<Shady>
	<Variation desc="Converts single float to 4 component vector of that value." simulationCommand="copy">
		<Input type="float" name="Value"/>
		<Output type="vec4" name="output"/>
		<Source type="GLSL">
			<Code output="output">
				[output] = vec4(Value, Value, Value, Value);
			</Code>
		</Source>
	</Variation>
</Shady>