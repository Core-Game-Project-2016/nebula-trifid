<Shady>
	<Variation desc="Takes four individual floats and converts to 4 component vector." simulationCommand="combine4">
		<Input type="float" name="Red"/>
		<Input type="float" name="Green"/>
		<Input type="float" name="Blue"/>
		<Input type="float" name="Alpha"/>
		<Output type="vec4" name="output"/>
		<Source type="GLSL">
			<Code output="output">
				[output] = vec4(Red, Green, Blue, Alpha);
			</Code>
		</Source>
	</Variation>
</Shady>