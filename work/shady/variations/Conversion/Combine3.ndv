<Shady>
	<Variation desc="Takes three individual floats and converts to 3 component vector." simulationCommand="combine3">
		<Input type="float" name="Red"/>
		<Input type="float" name="Green"/>
		<Input type="float" name="Blue"/>
		<Output type="vec3" name="output"/>
		<Source type="GLSL">
			<Code output="output">
				[output] = vec3(Red, Green, Blue);
			</Code>
		</Source>
	</Variation>
</Shady>